<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.paint.ImagePattern?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<fx:root prefHeight="400.0" prefWidth="600.0" stylesheets="@../../css/style.css" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox prefHeight="400.0" prefWidth="600.0" styleClass="color-blue" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label styleClass="login-title" text="Login To DesktopFX">
                     <font>
                        <Font size="30.0" />
                     </font></Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <VBox minWidth="400.0" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <VBox prefHeight="200.0" prefWidth="100.0">
                                    <children>
                                        <Label text="Login Id" />
                                        <TextField fx:id="loginId" styleClass="input" />
                                        <Label fx:id="loginIdError" text="Label" visible="false" />
                                    </children>
                                    <VBox.margin>
                                        <Insets bottom="10.0" />
                                    </VBox.margin>
                                </VBox>
                                <VBox prefHeight="200.0" prefWidth="100.0">
                                    <children>
                                        <Label text="Password" />
                                        <PasswordField fx:id="password">
                                            <styleClass>
                                                <String fx:value="input" />
                                                <String fx:value="password" />
                                            </styleClass></PasswordField>
                                        <Label fx:id="passwordError" text="Label" visible="false" />
                                    </children>
                                    <VBox.margin>
                                        <Insets bottom="10.0" />
                                    </VBox.margin>
                                </VBox>
                                <BorderPane>
                                    <right>
                                        <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                                            <children>
                                                <VBox alignment="CENTER" prefWidth="150.0">
                                                    <children>
                                                        <HBox alignment="CENTER_RIGHT">
                                                            <children>
                                                                <ProgressIndicator styleClass="loading-icon" fx:id="loadingIcon" visible="false" />
                                                                <Button fx:id="loginBtn" mnemonicParsing="false" text="Sign In">
                                                                    <styleClass>
                                                                        <String fx:value="btn" />
                                                                        <String fx:value="sign-in-button" />
                                                                    </styleClass>
                                                                    <HBox.margin>
                                                                        <Insets left="5.0" />
                                                                    </HBox.margin>
                                                                </Button>
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                </VBox>
                                            </children>
                                            <padding>
                                                <Insets bottom="10.0" top="10.0" />
                                            </padding>
                                        </HBox>
                                    </right>
                                    <left>
                                        <HBox alignment="CENTER_LEFT" minHeight="-Infinity" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                                            <children>
                                                <Label styleClass="link" text="Forgot password?" />
                                            </children>
                                            <BorderPane.margin>
                                                <Insets bottom="10.0" top="10.0" />
                                            </BorderPane.margin>
                                        </HBox>
                                    </left>
                                </BorderPane>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</fx:root>
